{
  "name": "rayso",
  "displayName": "ray.so",
  "description": "Create beautiful images of your code",
  "icon": "icon.png",
  "version": "0.0.1",
  "repository": {
		"url": "https://github.com/birdgg/vscode-rayso"
	},
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rayso.upload"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rayso.upload",
        "title": "upload snapshot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rayso.upload"
        }
      ]
    },
    "configuration": {
      "title": "RaySo",
      "properties": {
        "rayso.theme": {
          "scope": "resource",
          "type": "string",
          "default": "breeze",
          "enum": ["breeze", "candy", "crimson", "falcon", "meadow", "midnight", "raindrop", "sunset"],
          "description": "Theme for code snapshot"
        },
        "rayso.background": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Use a transparent  background for code snapshot"
        },
        "rayso.darkMode": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Use dark mode for code snapshot" 
        },
        "rayso.padding": {
          "scope": "resource",
          "type": "string",
          "default": "16",
          "description": "The padding for the snapshot's container"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
